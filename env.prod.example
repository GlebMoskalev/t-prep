.# Production Environment Variables for T-Prep

# Database
# DATABASE_URL формируется автоматически в Docker (postgresql://tprep_user:YOUR_STRONG_PASSWORD@db:5432/tprep_db)
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD

# JWT
SECRET_KEY=your-very-secure-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth (Web)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/api/v1/auth/google/callback

# Google OAuth (Android)
ANDROID_CLIENT_ID=your-android-client-id

# App settings
DEBUG=False
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security
# В продакшене рекомендуется использовать более строгие настройки
# ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com

# Logging
LOG_LEVEL=INFO

# Performance
# Настройки для продакшена
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
